<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.web.WebView?>
<?import javafx.geometry.Insets?>

<StackPane xmlns:fx="http://javafx.com/fxml" 
           fx:controller="de.bsommerfeld.wsbg.terminal.ui.view.dashboard.DashboardController"
           styleClass="root" stylesheets="@../css/index.css">

    <VBox spacing="0">


        <!-- Main Split Content -->
        <SplitPane fx:id="rootSplitPane" dividerPositions="0.75" VBox.vgrow="ALWAYS" styleClass="integrated-split-pane">
            <items>
                <!-- Terminal Output -->
                <WebView fx:id="logWebView" VBox.vgrow="ALWAYS" />

                <!-- Live Feed -->
                <VBox maxWidth="350" minWidth="250" style="-fx-background-color: transparent;">
                     <Label fx:id="liveFeedLabel" text="r/wallstreetbetsGER" styleClass="section-header-small"/>
                     <ListView fx:id="redditList" VBox.vgrow="ALWAYS" styleClass="terminal-list"/>
                </VBox>
            </items>
        </SplitPane>
    </VBox>



</StackPane>
